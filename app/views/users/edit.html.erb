<div class="row">

  <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <%= form_for @user, class:"form-horizontal center" do |f| %>

  <div class = "form-group">
    <%= f.label :username, class:"col-sm-4 control-label" %>
    <div class = "col-sm-8">
      <%= f.text_field :username, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :profile_photo_url, class:"col-sm-4 control-label" %>
    <div class = "col-sm-8">
      <%= f.text_field :profile_photo_url, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <%= f.label :about, class:"col-sm-4 control-label" %>
    <div class = "col-sm-8">
      <%= f.text_area :about, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>
</div>
<% end %>
</div>
</div>

